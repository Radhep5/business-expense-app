<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5C7C0"
    android:backgroundTint="#C3C5BE"
    tools:context=".MainActivity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="413dp"
        android:layout_height="358dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:background="#C2C4BD"
        android:backgroundTint="#C4C6BF"
        app:layout_constraintBottom_toTopOf="@+id/enter_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <Button
        android:id="@+id/enter_button_id"
        android:layout_width="215dp"
        android:layout_height="61dp"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#505052"
        android:text="Enter Spending"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:background="#505052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="183dp"
        android:layout_height="109dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="133dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="#505052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="183dp"
        android:layout_height="109dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="#505052"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="356dp"
        android:layout_height="122dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="#505052"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="11dp"

        android:fontFamily="sans-serif"
        android:text="BizWallet"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="-107dp"
        android:fontFamily="sans-serif"
        android:text="Starting Budget:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-158dp"
        android:layout_marginTop="-55dp"
        android:fontFamily="sans-serif"
        android:text="Budget Remaining:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-95dp"
        android:layout_marginEnd="-160dp"
        android:fontFamily="sans-serif"
        android:text="Avg Spent/Day:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-340dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:text="Entries:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-335dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="14dp"
        android:text="Marketing:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtRent"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtEquip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-215dp"
        android:layout_marginBottom="15dp"
        android:text="Equipment:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtEmployee"
        app:layout_constraintStart_toEndOf="@+id/view5" />

    <TextView
        android:id="@+id/txtRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-335dp"
        android:layout_marginTop="14dp"
        android:text="Rent:"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/txtMarket" />

    <TextView
        android:id="@+id/txtEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-215dp"
        android:layout_marginTop="14dp"
        android:text="Employee Needs:"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/txtOther" />

    <TextView
        android:id="@+id/txtOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-77dp"
        android:text="Other:"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <TextView
        android:id="@+id/txtAverageSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-140dp"
        android:layout_marginTop="13dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtStartingBud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-118dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtRemainingBud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-118dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>